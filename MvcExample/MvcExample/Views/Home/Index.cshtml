@model List<MvcExample.Controllers.BasicCustomerInformationModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h2>Customers</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>CustomerId</th>
                    <th>CompanyName</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var customer in Model) {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>
